<%- include('header') -%>
<%- include('menu') -%>

<section id="main">
    <div class="container py-5">

        <a href="/menhelyek" class="btn btn-secondary btn-lg">Vissza</a>
        <a href="/allatok/<%= menhely._id %>/new" class="btn btn-primary btn-lg">Új állat felvétele</a>

    </div>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2><%= menhely.name %> állatai</h2>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>
                            Név
                        </th>

                        <th>
                            Faj
                        </th>
                        <th>
                            Fajta
                        </th>
                        <th>
                            Kor
                        </th>
                        <th>

                        </th>
                    </tr>
                    <% allatok.forEach(function(egyAllat){ %>
                        <tr>
                            <td>
                                <%= egyAllat.nev %>
                            </td>

                            <td>
                                <%= egyAllat.faj %>
                            </td>
                            <td>
                                <%= egyAllat.fajta %>
                            </td>
                            <td>
                                <%= egyAllat.kor %>
                            </td>
                            <td>
                                <a href="/allatok/<%= menhely._id %>/edit/<%= egyAllat._id %>" class="btn btn-primary">Szerkeszt</a>
                                <a href="/allatok/<%= menhely._id %>/del/<%= egyAllat._id %>" class="btn btn-danger">Töröl</a>
                            </td>
                        </tr>
                    <% }); %>
                </table>
            </div>
        </div>
    </div>
</section>

<%- include('footer') -%>