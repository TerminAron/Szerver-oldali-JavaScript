<%- include('header') -%>
<%- include('menu') -%>

<section id="main">
    <div class="container pt-3">
        <h2>Menhely módosítása</h2>
        <form method="POST">
            <input type="hidden" name="knowtheid" value="<%= menhely._id %>">
            <div class="col-md-6 pt-2">
                <label for="inputName" class="form-label">Intézmény neve</label>
                <input type="text" class="form-control" id="inputName" name="name" value="<%= menhely.name %>">
            </div>
            <div class="col-md-6 pt-2">
                <label for="inputZip" class="form-label">Irányítószám</label>
                <input type="text" class="form-control" id="inputZip" name="pcode" value="<%= menhely.pcode %>">
            </div>
            <div class="col-md-6 pt-2">
                <label for="inputCity" class="form-label">Város</label>
                <input type="text" class="form-control" id="inputCity" name="city" value="<%= menhely.city %>">
            </div>
            <div class="col-md-6 pt-2">
                <label for="inputAddress" class="form-label">Cím</label>
                <input type="text" class="form-control" id="inputAddress" name="address" value="<%= menhely.address %>">
            </div>
            <div class="col-md-6 pt-2">
                <label for="inputPhonenum" class="form-label">Telefonszám</label>
                <input type="text" class="form-control" id="inputPhonenum" name="phone" value="<%= menhely.phone %>">
            </div>
            <div class="col-md-6 pt-2">
                <label for="inputEmail" class="form-label">Email</label>
                <input type="text" class="form-control" id="inputEmail" name="email" value="<%= menhely.email %>">
            </div>

            <div class="col-12 pt-2">
                <input type="submit" class="btn btn-primary btn-lg" value="Mentés"/>
                <a href="/menhelyek" class="btn btn-danger btn-lg">Mégse</a>
            </div>
        </form>
    </div>

</section>

<%- include('footer') -%>